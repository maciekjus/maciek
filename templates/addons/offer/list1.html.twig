{% set i = 0 %}
{% for foto, item in data %}
{% if i == 0 %}
<div class="row">
{% endif %}
	{% set i = i + item.width %}
	<div class="col-md-{{ item.width }} p-1" data-toggle="modal" data-target="#modal_{{ foto }}">
		<div class="col-sm-12 rounded h-100 offer-item p-0 border" 
				style="background-image: url({{ asset('photos/' ~ foto ~ '_a.jpg') }}); ">
			<div class="inside-offer-item h-100 font-weight-bold">
			<h1 style="font-size: 16pt; width: 100%; shadow: 0 0 20px #FFFFFF" class="text-center p-1 font-weight-bold">{{ item.title }}</h1>
			<p class="text-justify" style="font-size: 10pt; ">{{ item.content|raw }}</p>
			{{ foto }}_a.jpg<br>
			{{ foto }}_b.jpg<br>
			</div>
		</div>
	</div>
{% if i >= 12 %}
</div>
{% set i = 0 %}
{% endif %}


<div class="modal" tabindex="-1" role="dialog" id="modal_{{ foto }}">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">{{ item.title }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      	<div class="modal-image w-100 m-1" style="background-image: url({{ asset('photos/' ~ foto ~ '_b.jpg') }}); "></div>
        <p class="m-2">{{ item.modal_content is defined ? item.modal_content : item.content }}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Zamknij</button>
      </div>
    </div>
  </div>
</div>

{% endfor %}

